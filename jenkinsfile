pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node20'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        IMAGE_NAME   = 'sriram084/swiggy'
        IMAGE_TAG    = 'latest'

        AWS_REGION   = 'us-east-1'
        EKS_CLUSTER  = 'swiggy-eks-cluster'
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/sriramch163/swiggy'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh """
                      ${SCANNER_HOME}/bin/sonar-scanner \
                      -Dsonar.projectKey=Swiggy \
                      -Dsonar.projectName=Swiggy \
                      -Dsonar.sources=.
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Trivy Filesystem Scan') {
            steps {
                sh '''
                  trivy fs . \
                  --severity HIGH,CRITICAL \
                  --exit-code 0 \
                  -f table \
                  -o trivy-fs-report.txt
                '''
                archiveArtifacts artifacts: 'trivy-fs-report.txt', allowEmptyArchive: true
            }
        }

        stage('Docker Build & Push') {
            steps {
                withDockerRegistry(credentialsId: 'docker-creds', toolName: 'docker') {
                    sh """
                      docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                      docker push ${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }

        stage('Trivy Image Scan') {
            steps {
                sh """
                  trivy image ${IMAGE_NAME}:${IMAGE_TAG} \
                  --severity HIGH,CRITICAL \
                  --exit-code 0 \
                  -f table \
                  -o trivy-image-report.txt
                """
                archiveArtifacts artifacts: 'trivy-image-report.txt', allowEmptyArchive: true
            }
        }

        stage('Deploy to EKS') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-eks-creds'
                ]]) {
                    sh '''
                      echo "Generating kubeconfig dynamically..."
                      aws eks update-kubeconfig \
                        --region $AWS_REGION \
                        --name $EKS_CLUSTER

                      echo "Validating EKS connectivity..."
                      kubectl get nodes

                      echo "Deploying application to EKS..."
                      kubectl apply -f deployment.yaml
                      kubectl apply -f service.yaml

                      kubectl get pods
                      kubectl get svc
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Swiggy application deployed successfully to AWS EKS'
        }
        failure {
            echo 'Pipeline failed. Please review Jenkins logs.'
        }
        always {
            echo 'Pipeline execution completed'
        }
    }
}
